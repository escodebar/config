let mapleader=","
nnoremap <leader>ve :vsplit ~/.vimrc<CR>
nnoremap <leader>vs :source ~/.vimrc<CR>
nnoremap <leader>ne :NERDTreeToggleVCS<CR>
nnoremap <leader>fz :FZF<CR>
nnoremap <F2> :bp<CR>
